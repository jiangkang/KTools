<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    >

  <LinearLayout
      android:id="@+id/layout_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <Button
        android:id="@+id/btn_coordinator_layout"
        style="@style/KButton"
        android:text="CoordinatorLayout"
        android:background="#66CCCC"
        />
    <Button
        android:id="@+id/btn_set_toast_show_time"
        style="@style/KButton"
        android:text="自定义Toast显示时间"
        android:background="#6699CC"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/btn_show_floating_window"
          style="@style/KButton"
          android:layout_weight="1"
          android:text="显示悬浮框"
          android:background="#669999"
          />
      <Button
          android:id="@+id/btn_dismiss_floating_window"
          style="@style/KButton"
          android:layout_weight="1"
          android:text="关闭悬浮框"
          android:background="#669999"
          />

    </LinearLayout>

    <Button
        android:id="@+id/btn_create_simple_notification"
        android:text="创建简单的通知栏"
        style="@style/KButton"
        android:background="#6666CC"
        />

    <Button
        android:id="@+id/btn_show_custom_notification"
        android:text="显示自定义通知栏"
        style="@style/KButton"
        android:background="#663399"
        />

      <Button
          android:id="@+id/btn_widget_dialog"
          style="@style/KButton"
          android:text="Dialog"
          android:background="#4DB6AC"
          />

      <Button
          android:id="@+id/btn_floating_action_button"
          style="@style/KButton"
          android:background="#2196F3"
          android:text="FloatingActionBar"
          />

    <Button
        android:id="@+id/btn_scroll"
        style="@style/KButton"
        android:background="#03A9F4"
        android:text="Scrolling"
        />


      <Button
          android:id="@+id/btn_bottom_nav"
          style="@style/KButton"
          android:background="#009688"
          android:text="Bottom Navigation"
          />

    <Button
        android:id="@+id/btn_constraint_layout"
        style="@style/KButton"
        android:background="#009688"
        android:text="ConstraintLayout"
        />


  </LinearLayout>
</ScrollView>


